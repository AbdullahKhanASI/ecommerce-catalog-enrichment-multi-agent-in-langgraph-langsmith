# OpenAI Configuration (required)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Configuration (optional - for workflow tracing and monitoring)
# Get your API key from https://smith.langchain.com/
LANGSMITH_API_KEY=your_langsmith_api_key_here

# LangSmith Project Name (optional, defaults to "ecommerce-catalog-enrichment")
LANGCHAIN_PROJECT=ecommerce-catalog-enrichment

# Enable LangSmith Tracing (automatically set when LANGSMITH_API_KEY is provided)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# FastAPI Configuration
HOST=0.0.0.0
PORT=8000